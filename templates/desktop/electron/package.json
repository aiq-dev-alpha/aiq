{
  "name": "{{PROJECT_NAME}}",
  "version": "1.0.0",
  "description": "A modern Electron desktop application",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run build-watch\" \"wait-on dist/index.html && electron .\"",
    "build": "webpack --mode production",
    "build-watch": "webpack --mode development --watch",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "lint": "eslint src/",
    "test": "jest"
  },
  "keywords": ["electron", "desktop", "cross-platform"],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.56.0",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "style-loader": "^3.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "electron-updater": "^6.2.1"
  },
  "build": {
    "appId": "com.example.{{PROJECT_NAME}}",
    "productName": "{{PROJECT_NAME}}",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/",
      "src/main.js",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}